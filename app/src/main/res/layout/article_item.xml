<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin10"
    app:cardCornerRadius="@dimen/margin5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10">

    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:id="@+id/articleTitle"
        android:textColor="@color/colorDarkRed"
        tools:text="@string/home"
        android:textSize="@dimen/font20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
       />

    <TextView
        android:gravity="start"
        android:id="@+id/articlePublishDate"
        android:textColor="@color/colorGrey"
        tools:text="@string/last"
        app:layout_constraintTop_toBottomOf="@id/articleTitle"
        android:textSize="@dimen/font15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        app:layout_constraintTop_toBottomOf="@id/articlePublishDate"
        android:minHeight="@dimen/imgHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/articleLogo"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/articleAuthor"
        android:textColor="@color/colorDarkRed"
        tools:text="@string/writtenBy"
        app:layout_constraintTop_toBottomOf="@id/articleLogo"
        android:textSize="@dimen/font15"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <TextView
        android:id="@+id/articleDescription"
        android:textColor="@color/black"
        tools:text="@string/writtenBy"
        app:layout_constraintTop_toBottomOf="@id/articleAuthor"
        android:textSize="@dimen/font15"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>